<h1>ISFiT 2013 Events</h1>

<div class="pull-right">
    <%= link_to 'New Event', new_admin_event_path, class: "btn btn-primary" %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= link_to '+', weight_move_admin_event_path(event, :up => 1), class: "btn" %> <%= link_to '-', weight_move_admin_event_path(event, :up => 0), class: "btn" %></td>
      <td><%= link_to 'Show', admin_event_path(event), class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_admin_event_path(event), class: "btn" %></td>
      <td><%= link_to 'Destroy', admin_event_path(event), confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>

</table>
