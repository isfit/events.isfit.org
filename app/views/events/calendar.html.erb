<div class="container" id="page-wrapper">
	<div class="col-md-12">
		<% old_event_date = nil %>
		<div class="col-md-12">
			<h1> Isfit 2015 <%= t("event.Presenterer") %> </h1>
		</div>
		<% @events.each_with_index do |date, i| %>
			<% event = date.event %>
			<% if old_event_date.nil? || !old_event_date.to_s.eql?(date.start_at.strftime('%d').to_s) %>
				<% old_event_date = date.start_at.strftime('%d') %>
				<div class="col-md-12">
					<h3> 
						<%= t("event.#{date.start_at.strftime('%A')}") %> <%= date.start_at.strftime('%d') %>. Februar 
					</h3>
				</div>
				<% if i == 0 %> 
					<div class="col-md-12">
						<div class="col-md-4">
							<h4><%= t("event.Hva") %></h4>
						</div>
						<div class="col-md-4">
							<h4><%= t("event.NÃ¥r") %></h4>
						</div>
						<div class="col-md-4">
							<h4><%= t("event.Hvor") %></h4>
						</div>
					</div>
				<% end %>
			<% end %>
			<a href="/2015/<%=date.id%>" style="text-decoration:none;">
				<div class="col-md-12">	
					<div class="col-md-4">
						<h5><%= event.title %></h5>
					</div>
					<div class="col-md-4">
						<h5><%= t("event.kl") %>. <%= date.start_at.strftime('%H:%M') %></h5>
					</div>
					<div class="col-md-4">
						<h5><%= event.event_place.name %></h5>
					</div>
					<hr>
				</div>
			</a>
		<% end %> 
	</div>
</div>