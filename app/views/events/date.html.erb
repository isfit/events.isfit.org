<div class="col-md-12">
  <h1><%= t("event.date_event") %> <%= Date.parse(@date).strftime("%d.") %> <%= t("event.februar") %> </h1>
  <div class="col-md-8 no_padding_left">
    <hr>
  </div>
</div>
<% if @events.empty? %>
  <p><%= t("event.noevents") %> </p>
<% else %>
  <div class="col-md-8" id="event-list">
    <% @events.each do |date| %>
      <% event = date.event %>
      <a href="/2015/<%=date.id%>" class="event-link">
        <div class="col-md-12 <%=event.event_type.name.downcase%> event_category event-field">
          <div class="col-md-8">
            <h3><%= event.title %></h3>
          </div>
          <div class="col-md-4">
            <p class="price_events">

              <b><%=t("event.price.price") %> <%= t("event.price.member")%>:</b> <%= event.price_member %><br>
              <b>Price Other:</b> <%= event.price_other %><br>
            </p>     
          </div>
        </div>
      </a>
    <% end %>
  </div>
  <div class="event-preview col-md-4 visible-lg no_padding_left" id="event-preview">
    <% @events.each_with_index do |date, i| %>
      <% event = date.event %>
      <% if i == 0 %>
        <div class="event_content">
          <div class="col-md-6 no_padding_left">
          <%= image_tag event.image(:cover), :style => 'width: 100%' %>
          </div>
          <div class="col-md-6">
            <div class="event-details">
              <p><i class="fa fa-map-marker">&nbsp&nbsp</i> <%= event.event_place.name %></p>
              <% if !date.all_festival %>
                <p><i class="fa fa-calendar"></i> <%= date.start_at.strftime('%d feb') %></p>
                <p><i class="fa fa-clock-o"></i> <%= date.start_at.strftime('%H:%M') %>
                  <% if date.end_at %>
                    - <%= date.end_at.strftime("%H:%M") %>
                  <% end %>
                </p>
              <% else %>
                <p><i class="fa fa-calendar"></i> <%= t("event.all_festival")%></p>
              <% end %>              
            </div>
            <p>
              <% if event.price_member.nil? || event.price_member == 0 %>
                <b><%= t("event.price.member") %>:</b> 0 <br>
              <% else %>
                <b><%= t("event.price.member") %>:</b> <%= event.price_member %><br>
              <% end %>
              <% if event.price_other.nil? || event.price_other == 0 %>
                <b><%= t("event.price.nonmember") %>:</b> 0 <br>
              <% else %>
                <b> <%= t("event.price.nonmember") %>:</b> <%= event.price_other %><br>
              <% end %>
            </p>
          </div>
        </div>
      <% else %>
        <div class="event_content event_hidden">
          <div class="col-md-6 no_padding_left">
          <%= image_tag event.image(:cover), :style => 'width: 100%' %>
          </div>
          <div class="col-md-6">
            <div class="event-details">
              <p><i class="fa fa-map-marker">&nbsp&nbsp</i> <%= event.event_place.name %></p>
              <% if !date.all_festival %>
                <p><i class="fa fa-calendar"></i> <%= date.start_at.strftime('%d feb') %></p>
                <p><i class="fa fa-clock-o"></i> <%= date.start_at.strftime('%H:%M') %>
                  <% if date.end_at %>
                    - <%= date.end_at.strftime("%H:%M") %>
              <% end %>
                </p>
              <% else %>
                <p><i class="fa fa-calendar"></i> <%= t("event.all_festival")%></p>
              <% end %> 
            </div>
            <p>
              <% if event.price_member.nil? || event.price_member == 0 %>
                <b><%= t("event.price.member") %>:</b> 0 <br>
              <% else %>
                <b><%= t("event.price.member") %>:</b> <%= event.price_member %><br>
              <% end %>
              <% if event.price_other.nil? || event.price_other == 0 %>
                <b><%= t("event.price.nonmember") %>:</b> 0 <br>
              <% else %>
                <b> <%= t("event.price.nonmember") %>:</b> <%= event.price_other %><br>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>